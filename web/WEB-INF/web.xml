<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ordenEnvio</servlet-name>
        <servlet-class>com.ddicark.servlets.ordenEnvio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>factura</servlet-name>
        <servlet-class>com.ddicark.servlets.factura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>estadoCuenta</servlet-name>
        <servlet-class>com.ddicark.servlets.estadoCuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reporteLiquidacion</servlet-name>
        <servlet-class>com.ddicark.servlets.reporteLiquidacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reporteLiquidacionXLS</servlet-name>
        <servlet-class>com.ddicark.servlets.reporteLiquidacionXLS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fichaCliente</servlet-name>
        <servlet-class>com.ddicark.servlets.fichaCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reporteClienteVendedor</servlet-name>
        <servlet-class>com.ddicark.servlets.reporteClienteVendedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reporteCVXLS</servlet-name>
        <servlet-class>com.ddicark.servlets.reporteCVXLS</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ordenEnvio</servlet-name>
        <url-pattern>/ordenEnvio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>factura</servlet-name>
        <url-pattern>/factura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>estadoCuenta</servlet-name>
        <url-pattern>/estadoCuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reporteLiquidacion</servlet-name>
        <url-pattern>/reporteLiquidacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reporteLiquidacionXLS</servlet-name>
        <url-pattern>/reporteLiquidacionXLS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fichaCliente</servlet-name>
        <url-pattern>/fichaCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reporteClienteVendedor</servlet-name>
        <url-pattern>/reporteClienteVendedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reporteCVXLS</servlet-name>
        <url-pattern>/reporteCVXLS</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <!-- PARA SUBIR ARCHIVOS AL SERVIDOR -->
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>commons</param-value>
    </context-param>
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <!-- PARA QUE FUNCIONE EL DATAEXPORTER -->
</web-app>
